    "url": "https://github.com/ryanoasis/nerd-fonts/releases/download/v2.0.0/Meslo.zip",
    "hash": "350ff0b1061ca0d1e933c59861d6421ebb2667d494875fcb1821d3df44f08476",
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/ryanoasis/nerd-fonts/releases/download/v$version/Meslo.zip"
    },
    "installer": {
        "script": [
            "$TargetKey = \"HKCU:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts\\Scoop Meslo\"",
            "New-Item -Path $TargetKey -Force | Out-Null",
            "$TargetDirectory = New-Item -ItemType Directory -Force \"$Env:HOMEDRIVE$Env:HOMEPATH\\AppData\\Local\\Microsoft\\Windows\\Fonts\\Scoop Meslo\"",
            "Get-ChildItem $dir -filter '*Windows Compatible.*' | ForEach-Object {",
            "    $TargetFile = Join-Path -Path $TargetDirectory -ChildPath $($_.Name)",
            "    Copy-Item $_.FullName -Destination $TargetFile",
            "    New-ItemProperty -Path $TargetKey -Name $_.Name.Replace($_.Extension, ' (TrueType)') -Value $TargetFile -Force | Out-Null",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "Remove-Item -Path 'HKCU:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts\\Scoop Meslo'",
            "Remove-Item -Recurse -Force \"$Env:HOMEDRIVE$Env:HOMEPATH\\AppData\\Local\\Microsoft\\Windows\\Fonts\\Scoop Meslo\""
        ]
    }
}
