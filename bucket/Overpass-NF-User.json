    "url": "https://github.com/ryanoasis/nerd-fonts/releases/download/v2.0.0/Overpass.zip",
    "hash": "eeabe6120133bcc9af4cce452bb4bdaad5ea0ef5ecaaa6fef16f5c1b04c3280c",
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/ryanoasis/nerd-fonts/releases/download/v$version/Overpass.zip"
    },
    "installer": {
        "script": [
            "$TargetKey = \"HKCU:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts\\Scoop Overpass\"",
            "New-Item -Path $TargetKey -Force | Out-Null",
            "$TargetDirectory = New-Item -ItemType Directory -Force \"$Env:HOMEDRIVE$Env:HOMEPATH\\AppData\\Local\\Microsoft\\Windows\\Fonts\\Scoop Overpass\"",
            "Get-ChildItem $dir -filter '*Windows Compatible.*' | ForEach-Object {",
            "    $TargetFile = Join-Path -Path $TargetDirectory -ChildPath $($_.Name)",
            "    Copy-Item $_.FullName -Destination $TargetFile",
            "    New-ItemProperty -Path $TargetKey -Name $_.Name.Replace($_.Extension, ' (TrueType)') -Value $TargetFile -Force | Out-Null",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "Remove-Item -Path 'HKCU:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts\\Scoop Overpass'",
            "Remove-Item -Recurse -Force \"$Env:HOMEDRIVE$Env:HOMEPATH\\AppData\\Local\\Microsoft\\Windows\\Fonts\\Scoop Overpass\""
        ]
    }
}
