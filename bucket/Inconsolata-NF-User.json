    "url": "https://github.com/ryanoasis/nerd-fonts/releases/download/v2.0.0/Inconsolata.zip",
    "hash": "7ef196ce9fa7b4bc3f9e0290a0de0fbefee123a705ba84a1993d6336a92a5164",
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/ryanoasis/nerd-fonts/releases/download/v$version/Inconsolata.zip"
    },
    "installer": {
        "script": [
            "$TargetKey = \"HKCU:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts\\Scoop Inconsolata\"",
            "New-Item -Path $TargetKey -Force | Out-Null",
            "$TargetDirectory = New-Item -ItemType Directory -Force \"$Env:HOMEDRIVE$Env:HOMEPATH\\AppData\\Local\\Microsoft\\Windows\\Fonts\\Scoop Inconsolata\"",
            "Get-ChildItem $dir -filter '*Windows Compatible.*' | ForEach-Object {",
            "    $TargetFile = Join-Path -Path $TargetDirectory -ChildPath $($_.Name)",
            "    Copy-Item $_.FullName -Destination $TargetFile",
            "    New-ItemProperty -Path $TargetKey -Name $_.Name.Replace($_.Extension, ' (TrueType)') -Value $TargetFile -Force | Out-Null",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "Remove-Item -Path 'HKCU:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts\\Scoop Inconsolata'",
            "Remove-Item -Recurse -Force \"$Env:HOMEDRIVE$Env:HOMEPATH\\AppData\\Local\\Microsoft\\Windows\\Fonts\\Scoop Inconsolata\""
        ]
    }
}
