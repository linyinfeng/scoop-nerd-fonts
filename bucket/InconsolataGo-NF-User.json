    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/ryanoasis/nerd-fonts/releases/download/v$version/InconsolataGo.zip"
    },
    "installer": {
        "script": [
            "$TargetKey = \"HKCU:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts\\Scoop InconsolataGo\"",
            "New-Item -Path $TargetKey -Force | Out-Null",
            "$TargetDirectory = New-Item -ItemType Directory -Force \"$Env:HOMEDRIVE$Env:HOMEPATH\\AppData\\Local\\Microsoft\\Windows\\Fonts\\Scoop InconsolataGo\"",
            "Get-ChildItem $dir -filter '*Windows Compatible.*' | ForEach-Object {",
            "    $TargetFile = Join-Path -Path $TargetDirectory -ChildPath $($_.Name)",
            "    Copy-Item $_.FullName -Destination $TargetFile",
            "    New-ItemProperty -Path $TargetKey -Name $_.Name.Replace($_.Extension, ' (TrueType)') -Value $TargetFile -Force | Out-Null",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "Remove-Item -Path 'HKCU:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts\\Scoop InconsolataGo'",
            "Remove-Item -Recurse -Force \"$Env:HOMEDRIVE$Env:HOMEPATH\\AppData\\Local\\Microsoft\\Windows\\Fonts\\Scoop InconsolataGo\""
        ]
    }
}
