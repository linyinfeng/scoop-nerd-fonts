        "re": "/ryanoasis/nerd-fonts/releases/download/v(?<version>[\\d\\.]+)/HeavyData.zip"
    },
    "autoupdate": {
        "url": "https://github.com/ryanoasis/nerd-fonts/releases/download/v$version/HeavyData.zip"
    },
    "installer": {
        "script": [
            "New-Item -Path 'HKCU:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts\\Scoop.HeavyData' -Force | Out-Null",
            "Get-ChildItem $dir -filter '*Windows Compatible.*' | ForEach-Object {",
            "    New-ItemProperty -Path 'HKCU:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts\\Scoop.HeavyData' -Name $_.Name -Value $_.FullName -Force | Out-Null",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "Remove-Item -Path 'HKCU:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts\\Scoop.HeavyData'",
            "Write-Host \"The '$($app.Replace('-NF', ''))' Font family has been uninstalled and will not be present after restarting your computer.\" -Foreground Magenta"
        ]
    }
